<%- include('../layouts/header') %>
<%- include('../layouts/utils/navbar') %>
<h1 class="mt-3 text-center">Mahasiswa</h1>

<div class="container">
    <a class="btn btn-outline-primary my-3" href="/mahasiswa/add"><i class="bi bi-plus-circle"></i> Add Data
        Mahasiswa</a>
    <table class="table table-bordered table-hover text-center">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(mahasiswa.length > 0){ %>
            <% number=1;  %>
            <% mahasiswa.forEach((mhs) => { %>
            <tr>
                <td><%= number++ %></td>
                <td><%= mhs.name %></td>
                <td><%= mhs.email %></td>
                <td>
                    <a class="m-1 btn btn-outline-primary" href="/mahasiswa/<%= mhs.email %>/detail">Detail</a>
                    <a class="m-1 btn btn-outline-warning" href="/mahasiswa/<%= mhs.email %>/edit">Edit</a>
                    <form action="/mahasiswa/verify/delete" method="POST">
                        <input type="hidden" name="email" id="email" value="<%= mhs.email %>">
                        <button class="m-1 btn btn-outline-danger"
                            onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
            <% } else { %>
            <tr>
                <td colspan="4">
                    <div class="alert alert-danger text-center">No Data</div>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
<%- include('../layouts/footer') %>