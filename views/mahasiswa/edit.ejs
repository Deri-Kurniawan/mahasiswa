<%- include('../layouts/header') %>
<%- include('../layouts/utils/navbar') %>
<div class="container">
    <h1 class="mt-3 text-center">Edit Mahasiswa Data</h1>

    <div class="col-md-4 offset-4">
        <div class="text-center">
            <form class="form-group" action="/mahasiswa/verify/update" method="post">
                <div class="form-floating mb-2">
                    <input type="text" name="name" id="name" class="form-control" value="<%= mahasiswa.name %>"
                        placeholder="Name" autofocus required>
                    <label for="name">Name</label>
                </div>
                <div class="form-floating mb-2">
                    <input type="email" name="email" id="email" class="form-control" value="<%= mahasiswa.email %>"
                        placeholder="Email" required>
                    <label for="email">Email</label>
                </div>
                <button class="btn btn-outline-success form-control" type="submit">Update</button>
            </form>
        </div>
    </div>

</div>
<%- include('../layouts/footer') %>